<Window x:Class="ProyectoIPo.VentanaArtistas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:ProyectoIPo"
        Title="Gestión Artistas"
        WindowState="Maximized">
	<Window.Resources>
		<local:DateTimeToDateConverter x:Key="DateTimeToDateConverter" />
	</Window.Resources>

	<Grid>
		<TabControl>
			<TabItem Header="Artistas">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<!-- DataGrid para los artistas -->
					<DataGrid x:Name="dataGridArtistas"
                        AutoGenerateColumns="False"
                        Margin="3,3,3,10"
                        CanUserAddRows="False"
                        HeadersVisibility="Column"
                        RowHeaderStyle="{x:Null}"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        ColumnWidth="*">

                        <DataGrid.Columns>
                            <!-- Columnas para los artistas -->
                            <DataGridTextColumn Header="Nombre del Artista" Binding="{Binding Nombre}" />
                            <DataGridTextColumn Header="Género Musical" Binding="{Binding GeneroMusical}" />
                            <DataGridTextColumn Header="Datos Personales" Binding="{Binding DatosPersonales}" />
                            <DataGridTextColumn Header="Correo Electrónico" Binding="{Binding CorreoElectronico}" />
                            <DataGridTextColumn Header="Redes Sociales" Binding="{Binding RedesSociales}" />
                            <DataGridTextColumn Header="Caché" Binding="{Binding Cache}" />
                            <DataGridTextColumn Header="Fecha Inicio Festival" Binding="{Binding FechaInicioFestival}" />
                            <DataGridTextColumn Header="Duracion Festival" Binding="{Binding DuracionFestival}" />

                            <!-- Columna para el Día de Actuación -->
                            <DataGridTemplateColumn Header="Día de Actuación">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <DatePicker SelectedDate="{Binding DiaActuacion}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Columna para la Hora de Inicio -->
                            <DataGridTemplateColumn Header="Hora de Inicio">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox SelectedItem="{Binding HoraInicio}">
                                            <ComboBox.Items>
                                                <sys:String>12:00</sys:String>
                                                <sys:String>13:00</sys:String>
                                                <sys:String>14:00</sys:String>
                                                <sys:String>15:00</sys:String>
                                                <sys:String>16:00</sys:String>
                                                <sys:String>17:00</sys:String>
                                                <sys:String>18:00</sys:String>
                                                <sys:String>19:00</sys:String>
                                                <sys:String>20:00</sys:String>
                                                <sys:String>21:00</sys:String>
                                                <sys:String>22:00</sys:String>
                                                <sys:String>23:00</sys:String>
                                                <sys:String>00:00</sys:String>
                                            </ComboBox.Items>
                                        </ComboBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Columna para la Hora de Fin -->
                            <DataGridTemplateColumn Header="Hora de Fin">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox SelectedItem="{Binding HoraFin}">
                                            <ComboBox.Items>
                                                <sys:String>12:00</sys:String>
                                                <sys:String>13:00</sys:String>
                                                <sys:String>14:00</sys:String>
                                                <sys:String>15:00</sys:String>
                                                <sys:String>16:00</sys:String>
                                                <sys:String>17:00</sys:String>
                                                <sys:String>18:00</sys:String>
                                                <sys:String>19:00</sys:String>
                                                <sys:String>20:00</sys:String>
                                                <sys:String>21:00</sys:String>
                                                <sys:String>22:00</sys:String>
                                                <sys:String>23:00</sys:String>
                                                <sys:String>00:00</sys:String>
                                            </ComboBox.Items>
                                        </ComboBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Escenario" Binding="{Binding Escenario}" />
                            <DataGridTextColumn Header="Lugar de Alojamiento" Binding="{Binding Alojamiento}" />
                            <DataGridTextColumn Header="Petición Especial" Binding="{Binding PeticionEspecial}" />

                            <DataGridTemplateColumn Header="Estado" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox SelectedItem="{Binding Estado}" IsReadOnly="True" Background="LightGray">
                                            <ComboBox.ItemsSource>
                                                <Binding Path="EstadosDisponibles" />
                                            </ComboBox.ItemsSource>
                                        </ComboBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>

                    </DataGrid>

					<!-- StackPanel para los botones -->
					<StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="5" Grid.Row="1">
						<!-- Botón para agregar artista -->
						<Button Content="Añadir Artista" Click="AñadirArtista_Click" Margin="5"/>
					</StackPanel>
				</Grid>
			</TabItem>

			<TabItem Header="Escenarios">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="200"/>
						<ColumnDefinition Width="auto"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<ListBox x:Name="EscenariosListBox" SelectedIndex="0" Width="210" Margin="5">
						<ListBox.ItemTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<Image Width="32" Height="37" Source="{Binding LogoPath}"/>
									<TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Text="{Binding Nombre}"/>
								</StackPanel>
							</DataTemplate>
						</ListBox.ItemTemplate>
						<ListBox.ItemContainerStyle>
							<Style TargetType="ListBoxItem">
								<Setter Property="Margin" Value="2"/>
								<Style.Triggers>
									<Trigger Property="IsSelected" Value="True">
										<Setter Property="Foreground" Value="Blue"/>
										<Setter Property="FontWeight" Value="Bold"/>
										<Setter Property="BorderBrush" Value="Blue"/>
										<Setter Property="BorderThickness" Value="3"/>
									</Trigger>
								</Style.Triggers>
							</Style>
						</ListBox.ItemContainerStyle>
					</ListBox>

					<GridSplitter Grid.Column="1" Grid.Row="0" Width="5" HorizontalAlignment="Stretch"/>
					<StackPanel x:Name="spDetallesEscenario" Grid.Column="2" Grid.Row="0" Orientation="Vertical" Margin="5">
						<DataGrid x:Name="dataGridEscenarios" AutoGenerateColumns="False" MinHeight="200" MaxHeight="400">
							<DataGrid.Columns>
								<DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" />
								<DataGridTextColumn Header="Aforo Máximo" Binding="{Binding AforoMaximo}" />
								<DataGridTextColumn Header="Localización Entradas" Binding="{Binding LocalizacionEntradas}" />
								<DataGridTextColumn Header="Salidas de Emergencia" Binding="{Binding SalidasEmergencia}" />
								<DataGridTextColumn Header="Servicios Médicos" Binding="{Binding ServiciosMedicos}" />
								<DataGridTextColumn Header="Aseos" Binding="{Binding Aseos}" />
								<DataGridTextColumn Header="Seguridad" Binding="{Binding Seguridad}" />
								<DataGridTextColumn Header="Día y Hora Actuación" Binding="{Binding DiaYHoraActuacion}" />
								<DataGridTemplateColumn Header="Fotos" Width="100">
									<DataGridTemplateColumn.CellTemplate>
										<DataTemplate>
											<Image Width="32" Height="32" Source="{Binding FotoPath}" />
										</DataTemplate>
									</DataGridTemplateColumn.CellTemplate>
								</DataGridTemplateColumn>
							</DataGrid.Columns>
						</DataGrid>
						<TextBlock Text="Detalles del Escenario" Margin="10" FontWeight="Bold" />
						<TextBox x:Name="txtDetallesEscenario" Margin="10" Height="100" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" />
					</StackPanel>
					<Button Content="Añadir Escenario" Grid.Column="0" Grid.Row="1" Click="AñadirEscenario_Click" Margin="5"/>
				</Grid>
			</TabItem>
		</TabControl>
	</Grid>
</Window>
