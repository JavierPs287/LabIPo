<Window x:Class="ProyectoIPo.IntroducirDatosAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoIPo"
        mc:Ignorable="d"
        Title="IntroducirDatosAdmin" Height="200" Width="400"
		WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock HorizontalAlignment="Center" FontSize="16" FontWeight="Bold">Introduce el usuario y contraseña del admin</TextBlock>
            <TextBox Name="txtAdminUsuario" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0"/>
            <PasswordBox Name="txtAdminPassword" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0"/>
            <Button Name="btnConfirmar" Content="Confirmar" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnConfirmar_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
