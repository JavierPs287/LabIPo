<Window x:Class="ProyectoIPo.VentanaModificarFestival"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modificar Festival" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Nombre"/>
            <TextBox x:Name="txtNombre" Width="200" Margin="10"/>
            <Label Content="Fecha"/>
            <DatePicker x:Name="dpFecha" Width="200" Margin="10"/>
            <Label Content="Ubicación"/>
            <TextBox x:Name="txtUbicacion" Width="200" Margin="10"/>
            <Button Content="Guardar" Click="OnGuardarClick" Width="200" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
