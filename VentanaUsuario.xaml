<Window x:Class="ProyectoIPo.VentanaUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Datos del Usuario" Height="300" Width="400"
		WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="imgPerfil" Width="100" Height="100" Margin="10"/>
            <TextBlock x:Name="txtNombreUsuario" FontSize="16" Margin="10"/>
            <TextBlock x:Name="txtUltimoAcceso" FontSize="16" Margin="10"/>
            <Button Content="Continuar" Click="OnContinuarClick" Margin="10"/>
        </StackPanel>
        <Button Content="?" Width="30" Height="30" FontWeight="Bold"
            HorizontalAlignment="Right" VerticalAlignment="Top" 
            Margin="0,10,10,0"
            Click="BotonAyuda_Click"
            ToolTip="Ayuda" RenderTransformOrigin="17.533,0.335" Grid.Column="2" />
    </Grid>
</Window>
