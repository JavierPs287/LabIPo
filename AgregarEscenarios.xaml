<Window x:Class="ProyectoIPo.AgregarEscenarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Escenarios" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Agregar Escenarios" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <DataGrid x:Name="dataGridNuevosEscenarios" AutoGenerateColumns="False" Height="150" Margin="0,0,0,10" ItemsSource="{Binding Escenarios}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre del Escenario" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Capacidad" Binding="{Binding Capacidad}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Margin="0,0,0,10">
                <TextBox x:Name="txtNuevoEscenario" Width="200"/>
                <TextBlock Text="Nombre del Escenario" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Collapsed" x:Name="placeholderTextBlock"/>
            </Grid>
            <Button Content="Agregar Escenario" Width="200" Click="AgregarEscenario_Click"/>
            <Button Content="Cerrar" Width="200" Click="Cerrar_Click"/>
        </StackPanel>
    </Grid>
</Window>
