<Window x:Class="ProyectoIPo.SeleccionarTipoArtista"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleccionar Tipo de Artista" Height="103" Width="168"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10,10,10,0" Height="164" VerticalAlignment="Top">
        <TextBlock Text="¿Es un artista o un grupo?" FontWeight="Bold" Margin="0,0,0,10"/>
        <Button Content="Artista" Click="Artista_Click" Margin="0,0,0,5"/>
        <Button Content="Grupo" Click="Grupo_Click" Margin="0,0,0,5" Height="21" Width="148"/>
    </StackPanel>
</Window>
